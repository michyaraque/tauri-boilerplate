{
  "name": "tauri-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "tauri dev",
    "start": "vite",
    "rls": "tauri build",
    "rls:debug": "tauri build --debug",
    "rls:mac": "tauri build --target universal-apple-darwin",
    "build": "cross-env INLINE_RUNTIME_CHUNK=true NODE_OPTIONS=--max-old-space-size=16192 yarn vite build",
    "preview": "vite preview",
    "serve": "serve -s build",
    "preinstall": "yarn global add serve"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.9",
    "@chakra-ui/react": "^2.2.6",
    "@emotion/react": "11",
    "@emotion/styled": "11",
    "@fontsource/montserrat": "^4.5.13",
    "@tauri-apps/api": "^1.0.1",
    "framer-motion": "6",
    "localforage": "^1.10.0",
    "mutative": "^0.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.4.5",
    "tauri-plugin-store-api": "github:tauri-apps/tauri-plugin-store",
    "typescript": "^4.7.4",
    "zustand": "^4.2.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@rollup/plugin-inject": "^4.0.4",
    "@tauri-apps/cli": "^1.0.0-rc.8",
    "@types/node": "^18.7.15",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^1.0.7",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "rollup-plugin-polyfill-node": "^0.10.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "vite": "^2.9.0"
  }
}
